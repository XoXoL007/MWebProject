
@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Создать", "CreateAndEdit", "Book")

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Pages</th>
            <th scope="col">Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td scope="row">@item.AuthorId</td>
                <td scope="row">@item.Title</td>
                <td scope="row">@item.Pages</td>
                <td scope="row">@item.Price</td>
                <td scope="row">@Html.ActionLink("Edit Book", "CreateAndEdit", "Book", new { id = @item.Id }, null)</td>
                <td scope="row">@Html.ActionLink("Delete Book", "Delete", "Book", new { id = @item.Id }, null)</td>
            </tr>
        }
</table>


